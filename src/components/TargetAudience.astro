---
import initialDFan from '../assets/audience/initial-d-fan.png';
import jdmEnthusiast from '../assets/audience/jdm-enthusiast.png';
import keyOrganizer from '../assets/audience/key-organizer.png';

const audiences = [
  {
    title: "Initial D Fanatic",
    description: "Display your love for Takumi, tofu delivery, and downhill drifting with pride. This isn't just merch – it's a tribute.",
    image: initialDFan.src
  },
  {
    title: "JDM Enthusiast",
    description: "The AE86 is practically sacred. This is more than a key holder – it's a symbol of your dedication to automotive excellence.",
    image: jdmEnthusiast.src
  },
  {
    title: "Anyone Who Loses Keys",
    description: "Let's be honest, that's all of us. Give your keys a designated parking spot that's impossible to miss and undeniably cool.",
    image: keyOrganizer.src
  }
];
---
<section id="audience" class="py-20 bg-gradient-to-b from-trueno-black-light to-trueno-black">
  <div class="container mx-auto px-4">
    <h2 class="text-4xl md:text-5xl font-racing text-center mb-4">
      Who's This For?
    </h2>
    <p class="text-center text-xl text-trueno-white/80 mb-12">(Spoiler: It's Probably You)</p>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {audiences.map(audience => (
        <div class="group relative overflow-hidden rounded-xl" data-aos="fade-up">
          <img 
            src={audience.image} 
            alt={audience.title}
            class="w-full h-[400px] object-cover transition-transform duration-500 group-hover:scale-110"
          />
          <div class="absolute inset-0 bg-gradient-to-t from-trueno-black via-trueno-black/50 to-transparent">
            <div class="absolute bottom-0 left-0 right-0 p-6">
              <h3 class="font-racing text-2xl mb-2">{audience.title}</h3>
              <p class="text-trueno-white/80">{audience.description}</p>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>