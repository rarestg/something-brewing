---
import '@fontsource-variable/inter';
import '@fontsource/racing-sans-one';
import 'aos/dist/aos.css';

interface Props {
  title: string;
  description?: string;
}

const { 
  title,
  description = "Pop-up headlights for your keys! Limited edition AE86 key holder. Pre-order now!"
} = Astro.props;

// Use production domain for meta tags
const productionDomain = 'https://jdmhook.org';
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=AW-16940220378"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'AW-16940220378');
    </script>

    <!-- Open Graph meta tags with production domain -->
    <meta property="og:title" content="JDM Hook! Pop-up Key Holder" />
    <meta property="og:description" content="Your keys deserve pop-up headlights! Limited AE86 key holders available." />
    
    <!-- OpenGraph Video Tags -->
    <meta property="og:video" content={`${productionDomain}/og-video.mp4`} />
    <meta property="og:video:secure_url" content={`${productionDomain}/og-video.mp4`} />
    <meta property="og:video:type" content="video/mp4" />
    <meta property="og:video:width" content="640" />
    <meta property="og:video:height" content="360" />
    
    <!-- iOS/iMessage specific video tags -->
    <meta name="twitter:card" content="player" />
    <meta name="twitter:player" content={`${productionDomain}/og-video.mp4`} />
    <meta name="twitter:player:width" content="640" />
    <meta name="twitter:player:height" content="360" />
    
    <!-- Keep the image as fallback -->
    <meta property="og:image" content={`${productionDomain}/og-image.png`} />
    <meta property="og:url" content={productionDomain} />
    <meta property="og:type" content="website" />

    <!-- iOS specific -->
    <meta name="apple-mobile-web-app-title" content="JDM Hook" />
    <meta name="theme-color" content="#000000" />
  </head>
  <body class="bg-trueno-black text-trueno-white font-inter">
    <slot />
    <script>
      import AOS from 'aos';
      AOS.init({
        duration: 800,
        once: true,
        offset: 100,
      });
    </script>
  </body>
</html>

<style is:global>
  html {
    scroll-behavior: smooth;
  }

  body {
    max-width: 100vw;
    overflow-x: hidden;
  }

  /* Add global letter spacing for Racing Sans One font */
  .font-racing {
    letter-spacing: 0.05em;
    /* Slightly increase font weight for better readability */
    font-weight: 500;
  }

  /* Add extra letter spacing for smaller text */
  .text-xl.font-racing,
  .text-2xl.font-racing {
    letter-spacing: 0.075em;
  }

  /* Add even more spacing for very small text */
  .text-lg.font-racing,
  .text-base.font-racing {
    letter-spacing: 0.1em;
  }
</style>