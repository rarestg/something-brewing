---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import Features from '../components/Features.astro';
import TruenoLore from '../components/TruenoLore.astro';
import HistoryCard from '../components/HistoryCard.astro';
import TargetAudience from '../components/TargetAudience.astro';
import Gallery from '../components/Gallery.astro';
import PreorderCTA from '../components/PreorderCTA.astro';
import Footer from '../components/Footer.astro';
import backgroundVideo from '../assets/videos/background.mp4';
import PreorderModal from '../components/PreorderModal.astro';
---

<Layout title="AE86 Trueno Key Holder - Pre-order Now!">
  <main class="relative w-full overflow-x-hidden">
    {/* Video background */}
    <div class="fixed inset-0 -z-20">
      <video 
        autoplay 
        muted 
        loop 
        playsinline 
        class="w-full h-full object-cover"
      >
        <source src={backgroundVideo} type="video/mp4">
      </video>
    </div>

    {/* Semi-transparent overlay */}
    <div class="fixed inset-0 -z-10 bg-trueno-black/10"></div>

    {/* Content */}
    <Hero />
    <Features />
    <Gallery />
    <HistoryCard />
    <TargetAudience />
    <TruenoLore />
    <PreorderCTA />
    <Footer />
  </main>
</Layout>